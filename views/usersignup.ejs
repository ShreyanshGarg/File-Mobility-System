<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Sign Up</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div id="bg"></div>
    <form action="/usersignup" method="post">
      <div class="form-field-name">
        <input type="var" name="firstName" placeholder="First Name" required />
      </div>
      <div class="form-field-name">
        <input type="var" name="lastName" placeholder="Last Name" required />
      </div>
      <div class="form-field">
        <input type="tel" name="phone" placeholder="Mobile No" required />
      </div>
      <div class="form-field">
        <input type="email" name="email" placeholder="Email / Username" required />
      </div>
      <div class="form-field">
        <input type="password" name="password" placeholder="Password" required />
      </div>
      <div class="signing">
        <p>Already have a account? <a href="/userlogin"> Log In</a></p>
      </div>
      <div class="form-field">
        <button class="btn" type="submit" name="button" value="usersignup_page">
          Sign Up
        </button>
      </div>
    </form>
  </body>
</html>
