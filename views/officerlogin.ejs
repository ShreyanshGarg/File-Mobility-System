<!DOCTYPE html>

<%- include('partials/header') %>
<div id="bg"></div>
<form action="officerlogin" method="post">
  <div class="form-field">
    <input type="var" name="name" placeholder="Name" required />
  </div>
  <div class="form-field">
    <input type="var" name="username" placeholder="Username" required />
  </div>
  <div class="form-field">
    <input type="password" name="password" placeholder="Password" required />
  </div>
  <div>
    <p class="mb-0 err" style="display:<%=danger%>">Invalid Username or Password! Try Again</p>
  </div>
  <div class="form-field">
    <button class="btn" type="submit">Log in</button>
  </div>
</form>
<%- include('partials/footer') %>
