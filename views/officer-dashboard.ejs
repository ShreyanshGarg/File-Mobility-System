<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Officer Dashboard</title>
    <link rel="stylesheet" href="/css/officer-style.css" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/bootstrap-responsive.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <header class="header">
      File Mobility System
      <div class="profile">
        <i class="fa fa-user"></i>
        <button class="dropbtn"><%=username%></button>
        <div class="dropdown-content">
          <!-- <a href="#">Profile</a> -->
          <a href="/logoutofficer">Log Out</a>
        </div>
      </div>
    </header>
    <div class="profile-card">
      <img src="/images/profile.jpg" alt="Image" />
      <div class="details">
        <h2><%=name%></h2>
        <p><%=designation%></p>
        
      </div>
    </div>
    <div class="request-card">
      <h2>Requests</h2>
      <!-- <div class="search">
        <form action="#">
          <input type="text" placeholder=" Search Requests" name="search" />
          <button><i class="fa fa-search"></i></button>
        </form>
      </div> -->
      <form class="viewmore-form" action="/officerviewmore" method="post">
      <div class="subcards">

        <!-- console.log(Object.keys(applications).length)   -->
        <%if(Object.keys(applications).length!=0){applications.forEach((application,i) => { %>
    
          <div class="card">
            <div class="card-inner left">
              <h3>Application Number: <%=data[i].applicationno%></h3>
              <% var dd = String(data[i].date.getDate()).padStart(2, '0');%>
              <%var mm = String(data[i].date.getMonth() + 1).padStart(2, '0');%>
             <% var yyyy = data[i].date.getFullYear();  %>
             <%var today = dd + '/' + mm + '/' + yyyy;%>
              <p>Created On: <%=today%></p>
            </div>
            <div class="card-inner right">
              <div class="text-card">
              <p>Buyer Name: <%=data[i].buyername%></p>
              <p>Seller Name: <%=data[i].sellername%></p>
            </div>
            <div>
              <button type="submit" class="Viewmore-btn" name="viewmore" value="<%= JSON.stringify(data[i]) %>">View More</button>
            </div>
          </div>
          </div>
          <% })} %>
      </div>
    </form>
    </div>
  </body>
</html>
